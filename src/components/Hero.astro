---
interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  size?: 'full' | 'large' | 'medium' | 'small';
  overlay?: boolean;
  centered?: boolean;
}

const { 
  title, 
  subtitle, 
  image, 
  size = 'large',
  overlay = true,
  centered = true
} = Astro.props;
---

<section class:list={['hero', `hero--${size}`, { 'hero--centered': centered }]}>
  {image && (
    <div class="hero__bg">
      <img src={image} alt="" class="hero__bg-image" />
      {overlay && <div class="hero__overlay"></div>}
    </div>
  )}
  
  <div class="hero__content container">
    <h1 class="hero__title">{title}</h1>
    {subtitle && <p class="hero__subtitle">{subtitle}</p>}
    <slot />
  </div>
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  
  .hero--full {
    min-height: 100vh;
    padding: var(--space-2xl) 0;
  }
  
  .hero--large {
    min-height: 80vh;
    padding: var(--space-2xl) 0;
  }
  
  .hero--medium {
    min-height: 50vh;
    padding: var(--space-2xl) 0;
  }
  
  .hero--small {
    min-height: 30vh;
    padding: var(--space-xl) 0;
    padding-top: calc(80px + var(--space-xl));
  }
  
  .hero--centered {
    text-align: center;
  }
  
  .hero--centered .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .hero__bg {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .hero__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(26, 26, 26, 0.3) 0%,
      rgba(26, 26, 26, 0.6) 100%
    );
  }
  
  .hero__content {
    position: relative;
    z-index: 1;
    padding-top: 80px; /* Header height */
  }
  
  .hero__title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 400;
    line-height: 1.1;
    margin-bottom: var(--space-md);
    animation: fadeInUp 0.8s ease forwards;
  }
  
  .hero__bg + .hero__content .hero__title {
    color: white;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }
  
  .hero__subtitle {
    font-family: var(--font-display);
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    font-weight: 400;
    font-style: italic;
    max-width: 600px;
    margin-bottom: var(--space-lg);
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.2s forwards;
  }
  
  .hero__bg + .hero__content .hero__subtitle {
    color: rgba(255, 255, 255, 0.9);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    .hero--full {
      min-height: 90vh;
    }
    
    .hero--large {
      min-height: 70vh;
    }
  }
</style>

