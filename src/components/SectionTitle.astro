---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  light?: boolean;
}

const { title, subtitle, centered = true, light = false } = Astro.props;
---

<div class:list={['section-title', { 'section-title--centered': centered, 'section-title--light': light }]}>
  <h2 class="section-title__heading">{title}</h2>
  {subtitle && <p class="section-title__subtitle">{subtitle}</p>}
  <slot />
</div>

<style>
  .section-title {
    margin-bottom: var(--space-xl);
  }
  
  .section-title--centered {
    text-align: center;
  }
  
  .section-title__heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 400;
    margin-bottom: var(--space-sm);
    position: relative;
    display: inline-block;
  }
  
  .section-title--centered .section-title__heading {
    display: block;
  }
  
  .section-title__heading::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    background: var(--color-accent);
    margin-top: var(--space-md);
  }
  
  .section-title--centered .section-title__heading::after {
    margin-left: auto;
    margin-right: auto;
  }
  
  .section-title__subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin-top: var(--space-md);
  }
  
  .section-title--centered .section-title__subtitle {
    margin-left: auto;
    margin-right: auto;
  }
  
  .section-title--light .section-title__heading {
    color: white;
  }
  
  .section-title--light .section-title__subtitle {
    color: rgba(255, 255, 255, 0.7);
  }
</style>

