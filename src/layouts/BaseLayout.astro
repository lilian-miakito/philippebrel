---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Philippe Brel - Peintre Expressionniste Abstrait. Découvrez mes œuvres et mon univers artistique.",
  image = "/images/og-image.jpg"
} = Astro.props;

const fullTitle = title === "Accueil" ? "Atelier Philippe Brel" : `${title} | Atelier Philippe Brel`;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Philippe Brel" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Preconnect for fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <title>{fullTitle}</title>
    
    <!-- Decap CMS Identity Widget (pour l'auth et les invitations) -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  
  <body>
    <Header />
    
    <main id="main-content">
      <slot />
    </main>
    
    <Footer />
    
    <!-- Gestion de la redirection après login/invitation -->
    <script is:inline>
      (function() {
        function initNetlifyIdentity() {
          console.log("Vérification de Netlify Identity...");
          if (window.netlifyIdentity) {
            console.log("Netlify Identity trouvé !");
            
            // Écouter l'initialisation
            window.netlifyIdentity.on("init", user => {
              console.log("Event: init", user);
              if (!user) {
                // Si pas d'utilisateur, on écoute le login pour rediriger
                window.netlifyIdentity.on("login", () => {
                  console.log("Event: login");
                  document.location.href = "/admin/";
                });
              } else {
                console.log("Utilisateur déjà connecté");
              }
            });

            // Gérer l'initialisation manuelle si nécessaire (pour les SPA/Astro)
            // Cela permet de parser le hash #invite_token
            window.netlifyIdentity.init();

            // Forcer l'ouverture si un token est détecté (ceinture et bretelles)
            // Le widget le fait souvent tout seul sur .init(), mais parfois non
            if (window.location.hash.includes('_token=')) {
               console.log("Token détecté dans l'URL, ouverture forcée du widget");
               // Petit délai pour laisser le temps au widget de s'hydrater
               setTimeout(() => {
                 window.netlifyIdentity.open();
               }, 500);
            }
          } else {
            console.log("Netlify Identity pas encore chargé, nouvelle tentative dans 100ms");
            setTimeout(initNetlifyIdentity, 100);
          }
        }

        // Lancer la vérification au chargement
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", initNetlifyIdentity);
        } else {
          initNetlifyIdentity();
        }
      })();
    </script>
  </body>
</html>

