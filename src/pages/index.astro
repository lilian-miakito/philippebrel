---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import SectionTitle from '../components/SectionTitle.astro';
import GalerieGrid from '../components/GalerieGrid.astro';
import { getCollection } from 'astro:content';

// Récupérer les œuvres à mettre en avant
const allOeuvres = await getCollection('oeuvres');
const featuredOeuvres = allOeuvres
  .filter(o => o.data.featured)
  .sort((a, b) => (a.data.ordre || 0) - (b.data.ordre || 0))
  .slice(0, 6);

// Si pas assez d'œuvres "featured", prendre les plus récentes
const oeuvresAffichees = featuredOeuvres.length >= 3 
  ? featuredOeuvres 
  : allOeuvres.sort((a, b) => {
      const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
      const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
      return dateB - dateA;
    }).slice(0, 6);
---

<BaseLayout title="Accueil">
  <!-- Hero Section -->
  <Hero 
    title="Philippe Brel"
    subtitle="Peintre Expressionniste Abstrait"
    image="/images/hero-bg.jpg"
    size="full"
  >
    <div class="hero-actions">
      <a href="/galerie" class="btn btn--primary">Découvrir la galerie</a>
      <a href="/contact" class="btn btn--outline" style="color: white; border-color: white;">Me contacter</a>
    </div>
  </Hero>

  <!-- Section Présentation -->
  <section class="section intro">
    <div class="container container--narrow">
      <div class="intro__content">
        <h2 class="intro__title">L'Art de l'Expression</h2>
        <p class="intro__text">
          Bienvenue dans mon atelier. Je suis Philippe Brel, peintre expressionniste abstrait 
          basé en France. Mes œuvres explorent la lumière, les paysages et l'émotion à travers 
          des compositions vibrantes et texturées.
        </p>
        <p class="intro__text">
          Chaque toile est une invitation au voyage, un dialogue entre l'abstrait et le figuratif, 
          où les couleurs racontent des histoires de lieux et de moments capturés dans le temps.
        </p>
        <a href="/a-propos" class="btn btn--outline">En savoir plus</a>
      </div>
    </div>
  </section>

  <!-- Section Œuvres Récentes -->
  <section class="section section--alt">
    <div class="container">
      <SectionTitle 
        title="Œuvres Sélectionnées"
        subtitle="Découvrez une sélection de mes créations récentes"
      />
      
      <GalerieGrid oeuvres={oeuvresAffichees} columns={3} />
      
      <div class="section__cta">
        <a href="/galerie" class="btn btn--primary">Voir toute la galerie</a>
      </div>
    </div>
  </section>

  <!-- Section Contact -->
  <section class="section contact-section">
    <div class="container">
      <div class="contact-cta">
        <div class="contact-cta__content">
          <h2 class="contact-cta__title">Une œuvre vous intéresse ?</h2>
          <p class="contact-cta__text">
            N'hésitez pas à me contacter pour toute demande d'information, 
            d'achat ou de commande personnalisée. Livraison possible dans le monde entier.
          </p>
        </div>
        <div class="contact-cta__actions">
          <a href="mailto:brelphilippe@gmail.com" class="btn btn--accent">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            Envoyer un email
          </a>
          <a href="tel:+33662459783" class="btn btn--outline">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            +33 6 62 45 97 83
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Actions */
  .hero-actions {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-lg);
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.4s forwards;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Intro Section */
  .intro {
    padding: var(--space-2xl) 0;
  }
  
  .intro__content {
    text-align: center;
  }
  
  .intro__title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-lg);
    position: relative;
    display: inline-block;
  }
  
  .intro__title::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    background: var(--color-accent);
    margin: var(--space-md) auto 0;
  }
  
  .intro__text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    max-width: 700px;
    margin: 0 auto var(--space-md);
  }
  
  .intro__content .btn {
    margin-top: var(--space-lg);
  }
  
  /* Section CTA */
  .section__cta {
    text-align: center;
    margin-top: var(--space-xl);
  }
  
  /* Contact CTA */
  .contact-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
    padding: var(--space-xl);
    background: var(--color-bg-alt);
    border-left: 4px solid var(--color-accent);
  }
  
  .contact-cta__title {
    font-size: 1.75rem;
    margin-bottom: var(--space-sm);
  }
  
  .contact-cta__text {
    color: var(--color-text-muted);
    max-width: 500px;
    margin: 0;
  }
  
  .contact-cta__actions {
    display: flex;
    gap: var(--space-md);
    flex-shrink: 0;
  }
  
  @media (max-width: 900px) {
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .contact-cta {
      flex-direction: column;
      text-align: center;
    }
    
    .contact-cta__actions {
      flex-direction: column;
      width: 100%;
    }
    
    .contact-cta__actions .btn {
      width: 100%;
    }
  }
</style>

